{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "AntiHook",
  "version": "0.1.0",
  "identifier": "com.antihub.antihook",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "AntiHook",
        "width": 980,
        "height": 720,
        "minWidth": 860,
        "minHeight": 640,
        "resizable": true,
        "center": true,
        "visible": true,
        "decorations": true,
        "shadow": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "category": "DeveloperTool",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "shortDescription": "AntiHub-ALL 配置工具"
  }
}
